<Window x:Class="Dojo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dojo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1024">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="530*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" BorderThickness="2" BorderBrush="DarkRed" Margin="5">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/images/Warning-WF.png"></Image>
                    <Label Content="Überlauf Grauwasser" Foreground="White" FontSize="22" HorizontalAlignment="Center"></Label>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" BorderThickness="2" BorderBrush="White" Margin="1">
            
        </Border>
    </Grid>
</Window>
